        <i class="lazy-load"
           v-for="(item,index) in otherImgs"
           :key="item"
           @click="onDelete(index)">
          <img v-lazy="item"
               class="lazy-cover">
        </i>
        <button v-xy-moving-btn>
          <i class="icons-common-camera-light-outer">
            <div class="icons-common icons-common-camera-light-inner"></div>
