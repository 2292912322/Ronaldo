            <i class="lazy-load"
               v-show="imgs[0]"
               :key="'0'+imgs[0]">
              <img v-lazy="imgs[0]"
                   class="lazy-cover">
            </i>
          </i>
          <div>
            <i class="icons-common-camera-outer">
              <div class="icons-common icons-common-camera-inner"></div>
            </i>
            <span>车辆左前方照片</span>
          </div>
          <input type="file"
