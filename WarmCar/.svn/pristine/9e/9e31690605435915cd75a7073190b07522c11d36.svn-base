<script>
  import common from '~/mixins/common'
  import seo from '~/mixins/seo'
  import wxMixin from '~/mixins/wx-mixin'

  export default {
    mixins: [common, wxMixin, seo],
    components: {},
    data () {
      let that = this
      return {
        pageTitle: '账户信息',
        startLoad: false,
        //
        sex: [that.$store.state.userInfo.sex],
        sexes: [
          [
            {
              name: '男',
              value: '1'
            }, {
            name: '女',
            value: '2'
          }, {
            name: '未知',
            value: '0'
          }
          ]
        ]
      }
    },
    watch: {
      '$store.state.wxAuthStatus': async function (v) {
        let that = this
        // 需要授权才可以加载的数据(授权比页面装载慢)
        if (v && !that.startLoad) {
          that.startLoad = true
          //
          await that.$store.dispatch('updateUserInfo')
        }
      }
    },
    computed: {
      statusText () {
        let that = this
        switch (that.$store.state.userStatus.certificationStatus) {
          case '05':
            return '已完成认证'
            break
          case '03':
            return '审核未通过'
            break
          case '02':
            return '等待审核中'
            break
          case '04':
            return '等待审核中'
            break
          default:
            return '未认证'
        }
      }
    },
    methods: {
      onLogout () {
        let that = this
        that.$store.dispatch('logOut')
        that.$router.replace('/auth/login')
      },
      async onSex (closeType) {
        let that = this
        if (closeType) {
          let {success, bizContent} = await that.$api.warmcar['modify_customer/sex']({
            sex: that.sex[0]
          })
          if (success) {
            that.$wc.toast('操作成功')
            that.$store.commit('userInfo', {sex: that.sex[0]})
          } else {
            that.sex = [that.$store.state.userInfo.sex]
          }
        }
      }
    },
    async created () {
      let that = this
      // 需要授权才可以加载的数据(授权比页面装载快)
      if (that.$store.state.wxAuthStatus && !that.startLoad) {
        that.startLoad = true
        //
        await that.$store.dispatch('updateUserInfo')
      }
      // 无需授权可以提前加载的数据
    }
  }
</script>