@import "~vue-xy-ui/dist/mixin";

button {
  background: none;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  &.btn-bottom {
    /*background: linear-gradient(transparent 0%, rgba(255, 255, 255, 0.8) 30%, #fff);*/
    padding: rsh(30) rsh(42) rsh(30) rsh(42);
    display: block;
    width: 100vw;
    /*position: fixed;*/
    /*bottom: 0;*/
    /*left: 0;*/
    position: relative;
    &.btn-bottom--inner {
      width: 100%;
      padding: 0;
    }
    & > span {
      display: block;
      font-size: rsh(32);
      color: #fff;
      line-height: rsh(86);
      background-color: #ff5252;
      border-radius: rsh(86/2);
    }
    @keyframes rotating {
      0% {
        //opacity: 0;
        transform: rotateZ(0deg)
      }
      100% {
        //opacity: 1;
        transform: rotateZ(360deg)
      }
    }
  }
}